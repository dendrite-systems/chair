{
  "manifest_version": 2,
  "name": "Screenshot Taker",
  "version": "1.0",
  "description": "Takes a screenshot when a button is pressed",
  "permissions": ["activeTab", "<all_urls>"],
  "browser_action": {
    "default_icon": "icon.png",
    "default_title": "Take Screenshot"
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  }
}
